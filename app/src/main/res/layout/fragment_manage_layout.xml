<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manageAccountsFragment"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/manageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manageHeaderText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/appScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appListDescription"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageHeader">

        <LinearLayout
            android:id="@+id/appLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/loginWithBirdBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login with Bird"/>
            <Button
                android:id="@+id/loginWithLimeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login with Lime"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/returnBtnText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>