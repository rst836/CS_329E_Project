<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsManage.LimeLogin.FragmentLogin2"
    android:background="?android:windowBackground">

    <TextView
        android:id="@+id/limeTokenInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limeTokenInstructions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterLimeToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/enterTokenHint"
        android:hint="@string/enterTokenHint"
        android:textColor="?android:textColorPrimary"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limeTokenInstructions" />

</androidx.constraintlayout.widget.ConstraintLayout>